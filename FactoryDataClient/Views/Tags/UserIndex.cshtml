
@model IEnumerable<FactoryDataClient.Models.Tag>


@{
    ViewBag.Title = "Tags";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Tag List</h2>

<hr />

<table id="tags" class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Tag</th>
            <th>Tag Type</th>
            <th>Controller</th>
            <th></th>
        </tr>
    </thead>
    <tbody></tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function () {

            var table = $("#tags").DataTable({
                ajax: {
                    url: "api/tags",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name",
                        render: function (data, type, tag) {
                            return "<a href='/tags/details/" + tag.id + "'>" + tag.name + "</a>";
                        }

                    },
                    {
                        data: "tagType.name"
                    },
                    {
                        data: "plc.name"
                    },
                    {
                        data: "id",
                        render: function (data, type, tag) {
                            return "<a href='/tags/data/" + tag.id + "'>Data</a>";
                        }
                    }
                ]
            });

        });
    </script>
}